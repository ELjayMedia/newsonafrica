# WordPress
WORDPRESS_API_URL=https://your-wordpress-api.com/wp-json  # Base URL of your WordPress REST API
NEXT_PUBLIC_WORDPRESS_API_URL=https://your-wordpress-api.com/wp-json  # Public URL for client-side requests
WP_APP_USERNAME=your_app_username  # WordPress application username
WP_APP_PASSWORD=your_app_password  # WordPress application password

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url  # Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key  # Public Supabase anon key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key  # Supabase service role key

# Authentication
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id  # Facebook App ID for client-side auth
FACEBOOK_APP_SECRET=your_facebook_app_secret  # Facebook App secret for server

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id  # Google Analytics measurement ID

# Site
NEXT_PUBLIC_SITE_URL=https://your-site-url.com  # Base URL of your deployed site
