{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*",
    "codegen.ts",
    "components/**/*",
    "config/**/*",
    "contexts/**/*",
    "docs/**/*",
    "hooks/**/*",
    "lib/**/*",
    "middleware.test.ts",
    "middleware.ts",
    "next-env.d.ts",
    "next.config.js",
    "services/**/*",
    "supabase/**/*",
    "types/**/*",
    "utils/**/*",
    "vitest.config.ts",
    "vitest.setup.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "scripts", "@v0/scripts", ".next", "out"]
}
