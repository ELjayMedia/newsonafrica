{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "bump",
  "packageRules": [
    { "matchManagers": ["pnpm"], "rangeStrategy": "bump" },
    { "matchPackagePatterns": ["next", "react", "react-dom"], "groupName": "next/react core" }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "automerge": false
}

