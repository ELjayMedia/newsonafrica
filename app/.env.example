# Environment Variables Example
# Copy this file to .env.local and fill in the values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-site-url.com
NEXT_PUBLIC_DEFAULT_SITE=your-default-site

# API Configuration
NEXT_PUBLIC_API_URL=https://your-api-url.com
WORDPRESS_API_URL=https://your-wordpress-api.com
NEXT_PUBLIC_WORDPRESS_API_URL=https://your-wordpress-api.com

# Authentication
AUTH0_SECRET=your-auth0-secret
AUTH0_BASE_URL=https://your-auth0-base-url.com
AUTH0_ISSUER_BASE_URL=https://your-auth0-issuer.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_DOMAIN=your-auth0-domain
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
JWT_SECRET=your-jwt-secret
CSRF_SECRET=your-csrf-secret

# WordPress Authentication
WORDPRESS_AUTH_TOKEN=your-wordpress-auth-token
WP_APP_USERNAME=your-wp-username
WP_APP_PASSWORD=your-wp-password
WP_NONCE=your-wp-nonce
WP_JWT_TOKEN=your-wp-jwt-token
WORDPRESS_WEBHOOK_SECRET=your-wordpress-webhook-secret

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id
NEXT_PUBLIC_GA_ID=your-ga-id

# Cloudflare
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_EMAIL=your-cloudflare-email
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Sentry
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# AdSense
NEXT_PUBLIC_ADSENSE_CLIENT_ID=your-adsense-client-id

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_API_URL=https://api-m.sandbox.paypal.com
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Facebook
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Algolia
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=your-algolia-index-name
ALGOLIA_SEARCH_API_KEY=your-algolia-search-api-key

# Disqus
NEXT_PUBLIC_DISQUS_SHORTNAME=your-disqus-shortname
DISQUS_PUBLIC_KEY=your-disqus-public-key
DISQUS_SECRET_KEY=your-disqus-secret-key

# Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# LinkedIn (server-side only)
LINKEDIN_API_KEY=your-linkedin-api-key
LINKEDIN_API_SECRET=your-linkedin-api-secret

# Paystack
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_SECRET_KEY=your-paystack-secret-key

# Revalidation
REVALIDATION_SECRET=your-revalidation-secret

# Site URL
SITE_URL=https://your-site-url.com
